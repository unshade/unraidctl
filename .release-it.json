{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": false,
      "header": "# Changelog\n\n",
      "types": [
        {
          "type": "feat",
          "section": "‚ú® Features"
        },
        {
          "type": "fix",
          "section": "üêõ Fixes"
        },
        {
          "type": "chore",
          "section": "üßπ Chores"
        },
        {
          "type": "docs",
          "section": "üìù Documentation"
        },
        {
          "type": "refactor",
          "section": "‚ôªÔ∏è Refactors"
        }
      ]
    }
  },
  "hooks": {
    "after:release": "go tool goreleaser release --clean"
  }
}
